<div class="container-box">

<%= form_for(resource, :as => resource_name, :class => 'form-horizontal', :url => user_registration_path, :method => :post) do |f| %>
    <fieldset>
        <div id="legend" class="mb50">
            <legend class="">注册</legend>
        </div>

        <div class="control-group">
            <%= f.label '邮箱', :class => "control-label" %>
            <div class="controls">
                 <%= f.email_field :email, :autofocus => true, :class => 'input-xlarge' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label '用户名', :class => "control-label" %>
            <div class="controls">
                 <%= f.text_field :username, :autofocus => true, :class => 'input-xlarge' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label '密码', :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password, :class => 'input-xlarge' %>
                <p class="help-block">请输入您的密码（不少于8个字符）</p>
            </div>
        </div>

        <div class="control-group">
            <%= f.label '密码确认', :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password_confirmation, :class => 'input-xlarge'  %>
                <p class="help-block">请输入您的密码（不少于8个字符）</p>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <%= f.submit "注册", :class => 'btn btn-success' %>
            </div>
        </div>
    </fieldset>

  <div></div>
<% end %>


</div>
<div class="topics container-box">
  <div class="ui-header">
    <%= link_to '创建新主题', new_news_path, :class => 'btn btn-small fr' %>
    <span class="bread-nav"> 新闻 </span>
  </div>

  <% @articles.each do |article| %>
  <div class="topic-item">

    <div class="main">
      <h3 class="title">
        <%= link_to article.title, news_path(article.id, :anchor => "reply#{article.replies.count}") %>
      </h3>

      <div class="ui-content">
        <p><%= article.content %></p>
      </div>

      <div class="meta">
        <span class="username">
          <%= link_to article.user.username, user_path(article.user)  %>
        </span> •
        <span class="last-touched"><%= time_ago_in_words article.created_at %></span> •
      </div>
    </div>
    <div class="count">
      <%= link_to article.replies.count, news_path(article.id) %>
    </div>
  </div>
  <% end %>
</div>